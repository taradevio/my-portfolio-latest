<div class="fixed bottom-0 left-0 w-full z-99 block lg:hidden bg-amber-400">
  <nav>
    <div class="border-1 p-3">
      <ul id="nav-list" class="flex gap-5 justify-center text-lg">
        <li class="cursor-pointer" data-page="home">Home</li>
        <!-- <li class="cursor-pointer" data-page="projects">Projects</li> -->
        <li class="cursor-pointer" data-page="resume">Resume</li>
        <li class="cursor-pointer" data-page="sandbox">Sandbox</li>
        <li class="cursor-pointer" data-page="blog">Blog</li>
      </ul>
    </div>
  </nav>
</div>

<script is:inline>
  if (typeof window !== "undefined") {
    window.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll("#nav-list [data-page]").forEach((item) => {
        item.addEventListener("click", () => {
          const page = item.dataset.page;
          // kirim event global ke MainContent
          window.dispatchEvent(
            new CustomEvent("page-change", { detail: page })
          );
        });
      });
    });
  }
</script>


