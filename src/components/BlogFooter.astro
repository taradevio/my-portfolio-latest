<script is:inline>
  if (typeof window !== "undefined") {
    const showPage = (page) => {
      window.dispatchEvent(new CustomEvent("page-change", { detail: page }));
    };

    const setupNav = () => {
      // handle klik nav bar
      document.querySelectorAll("#nav-list [data-page]").forEach((item) => {
        item.addEventListener("click", () => {
          showPage(item.dataset.page);
        });
      });

      // handle klik footer
      document.querySelectorAll("footer [data-page]").forEach((link) => {
        link.addEventListener("click", (e) => {
          e.preventDefault();
          const page = link.dataset.page;
          if (window.location.pathname !== "/") {
            // kalau lagi di /blog, redirect dulu ke /
            window.location.href = `/#${page}`;
          } else {
            showPage(page);
          }
        });
      });

      // ðŸ”¹ handle URL hash (/#blog)
      const hash = window.location.hash.replace("#", "");
      if (hash) {
        // kasih delay dikit buat nunggu section render
        setTimeout(() => showPage(hash), 50);
      }
    };

    if (document.readyState === "loading") {
      window.addEventListener("DOMContentLoaded", setupNav);
    } else {
      setupNav();
    }
  }
</script>


