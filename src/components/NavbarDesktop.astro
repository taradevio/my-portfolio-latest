<nav class="twitter-tabs" id="twitter-tabs">
  <button class="twitter-tab active" data-tab="projects"> Projects </button>
  <button class="twitter-tab" data-tab="blogs"> Blogs </button>
</nav>

<script is:inline>
  if (typeof window !== "undefined") {
    window.addEventListener("DOMContentLoaded", () => {
      const tabs = document.querySelectorAll("#twitter-tabs .twitter-tab");

      tabs.forEach((tab) => {
        tab.addEventListener("click", () => {
          // Remove active from all tabs
          tabs.forEach((t) => t.classList.remove("active"));
          // Add active to clicked tab
          tab.classList.add("active");

          // Get tab name and dispatch event
          const tabName = tab.dataset.tab;
          window.dispatchEvent(
            new CustomEvent("tab-change", { detail: tabName }),
          );
        });
      });
    });
  }
</script>
