---
import "../styles/global.css";
import NavbarMobile from "../components/NavbarMobile.astro";
import BackgroundImage from "../components/BackgroundImage.astro";
import NavbarDesktop from "../components/NavbarDesktop.astro";
import MainContent from "../components/MainContent.astro";
import ProfileInfo from "../components/ProfileInfo.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Nanda Kresnatara - Frontend Developer Portfolio"
    />
    <meta name="theme-color" content="#000000" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <title>Nanda Kresnatara | @taradevio</title>
  </head>
  <body>
    <!-- Mobile Header (visible only on mobile) -->
    <NavbarMobile />

    <!-- Main Twitter Layout -->
    <div class="twitter-layout">
      <main class="twitter-container">
        <!-- Banner & Avatar -->
        <BackgroundImage />

        <!-- Profile Info Section -->
        <ProfileInfo />

        <!-- Tab Navigation -->
        <NavbarDesktop />

        <!-- Content Feed -->
        <MainContent />
      </main>
    </div>
  </body>
</html>

<script>
  import Lenis from "lenis";
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  // Initialize Lenis
  const lenis = new Lenis({
    duration: 1.2,
    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
    orientation: "vertical",
    gestureOrientation: "vertical",
    smoothWheel: true,
  });

  function raf(time: number) {
    lenis.raf(time);
    requestAnimationFrame(raf);
  }

  requestAnimationFrame(raf);

  // Connect GSAP ScrollTrigger to Lenis
  gsap.registerPlugin(ScrollTrigger);
  lenis.on("scroll", ScrollTrigger.update);

  gsap.ticker.add((time) => {
    lenis.raf(time * 1000);
  });

  gsap.ticker.lagSmoothing(0);

  // Initialize theme before page renders to prevent flash
  (function () {
    const saved = localStorage.getItem("theme");
    if (saved) {
      document.documentElement.setAttribute("data-theme", saved);
    } else {
      document.documentElement.setAttribute("data-theme", "bocchi");
    }
  })();
</script>
