            <header class="mb-10 text-center">
              <h1
                class="text-[36px] font-extrabold leading-tight mb-4 text-[var(--text-primary)]"
              >
                {project.title}
              </h1>
              <p
                class="text-[20px] leading-relaxed text-[var(--text-secondary)] mb-6 font-[Georgia,serif]"
              >
                {project.description}
              </p>

              <!-- Tech Stack Tags -->
              <div class="flex flex-wrap justify-center gap-2 mb-8">
                {
                  project.stack
                    ?.filter((item): item is string => typeof item === "string")
