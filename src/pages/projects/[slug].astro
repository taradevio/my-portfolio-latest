---
import "../../styles/global.css";
import client from "../../../tina/__generated__/client";
import { CustomMarkdown } from "../../components/CustomMarkdown";

export async function getStaticPaths() {
  const resp = await client.queries.projectConnection();
  const projects = (resp.data.projectConnection?.edges ?? [])
    .map((e) => e?.node ?? null)
    .filter((n): n is NonNullable<typeof n> => n !== null);

  return projects.map((project) => ({
    params: { slug: project._sys.filename },
    props: { project },
  }));
}

const { project } = Astro.props;
const globalResp = await client.queries.global({ relativePath: "index.md" });
const globalData = globalResp.data.global;

// Format date helper
const formatDate = () => {
  if (project.date) {
    return new Date(project.date).toLocaleDateString("en-US", {
      weekday: "long",
      year: "numeric",
      month: "long",
      day: "numeric",
    });
  }
  const now = new Date();
  return now.toLocaleDateString("en-US", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={project.description} />
    <title>{project.title} | @taradevio</title>
  </head>
