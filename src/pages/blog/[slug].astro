---
import "../../styles/global.css";
import client from "../../../tina/__generated__/client";
import { CustomMarkdown } from "../../components/CustomMarkdown";

export async function getStaticPaths() {
  const resp = await client.queries.postConnection();
  const posts = (resp.data.postConnection?.edges ?? [])
    .map((e) => e?.node ?? null)
    .filter((n): n is NonNullable<typeof n> => n !== null);

  return posts.map((post) => ({
    params: { slug: post._sys.filename },
    props: { post },
  }));
}

const { post } = Astro.props;

// Format date helper
const formatDate = () => {
  if (post.date) {
    return new Date(post.date).toLocaleDateString("en-US", {
      weekday: "long",
      year: "numeric",
      month: "long",
      day: "numeric",
    });
  }
  const now = new Date();
  return now.toLocaleDateString("en-US", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={post.description} />
    <title>{post.title} | @taradevio</title>
  </head>
  <body>
    <div class="twitter-layout">
      <main class="twitter-container">
        <!-- Back Header -->
        <header class="project-header">
          <a href="/" class="back-button" aria-label="Go back">
            <svg viewBox="0 0 24 24" width="20" height="20">
              <path
                fill="currentColor"
                d="M7.414 13l5.043 5.04-1.414 1.42L3.586 12l7.457-7.46 1.414 1.42L7.414 11H21v2H7.414z"
              ></path>
            </svg>
          </a>
          <div class="header-info">
            <h1 class="header-title">Blog</h1>
            <p class="header-subtitle">@taradevio</p>
          </div>
        </header>

        <!-- Blog Content as Tweet -->
        <article class="tweet-card project-detail border-none">
          <div class="max-w-3xl mx-auto py-4">
            <!-- Header -->
            <h1
              class="text-[32px] font-extrabold leading-tight mb-4 text-[var(--text-primary)] text-center"
            >
              {post.title}
            </h1>

            <p
              class="text-[20px] leading-relaxed text-[var(--text-secondary)] mb-6 font-[Georgia,serif] text-center"
            >
              {post.description}
            </p>

            <!-- Metadata with Avatar -->
            <div
              class="flex items-center justify-center gap-3 mb-8 text-[15px] text-[var(--text-secondary)]"
            >
              <img
                src="/user-profile.jpg"
                alt="Nanda Kresnatara"
                class="w-8 h-8 rounded-full object-cover border border-[var(--border-color)]"
              />
              <span class="font-bold text-[var(--text-primary)]"
                >{post.author || "Nanda Kresnatara"}</span
              >
              <span>Â·</span>
              <span>{formatDate()}</span>
            </div>

            <!-- Tags -->
            <div class="flex flex-wrap justify-center gap-2 mb-8">
              {
                post.tags
                  ?.filter((item): item is string => typeof item === "string")
                  .map((item) => <span class="tweet-tag">{item}</span>)
              }
            </div>

            <!-- Featured Image -->
            {
              post.image && (
                <figure class="my-8 mx-auto w-full">
                  <div class="rounded-xl overflow-hidden border border-[var(--border-color)] shadow-sm">
                    <img
                      src={post.image}
                      alt={post.alt || post.title}
                      class="w-full h-auto block"
                    />
                  </div>
                  {post.caption && (
                    <figcaption class="mt-3 text-sm text-[var(--text-secondary)] text-center font-[Georgia,serif] italic">
                      {post.caption}
                    </figcaption>
                  )}
                </figure>
              )
            }

            <!-- Body Content -->
            {
              post.body && (
                <div class="article-content mt-8 text-left">
                  <CustomMarkdown content={post.body} />
                </div>
              )
            }
          </div>
        </article>
      </main>
    </div>
  </body>

  <script is:inline>
    // Initialize theme
    (function () {
      const saved = localStorage.getItem("theme");
      if (saved) {
        document.documentElement.setAttribute("data-theme", saved);
      } else if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
        document.documentElement.setAttribute("data-theme", "dark");
      }
    })();
  </script>

  <style>
    .project-header {
      display: flex;
      align-items: center;
      gap: 24px;
      padding: 12px 16px;
      border-bottom: 1px solid var(--border-color);
      position: sticky;
      top: 0;
      background-color: var(--bg-primary);
      z-index: 10;
    }

    .back-button {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      color: var(--text-primary);
      transition: background-color 0.2s ease;
      text-decoration: none;
    }

    .back-button:hover {
      background-color: var(--bg-hover);
      text-decoration: none;
    }

    .header-info {
      flex: 1;
    }

    .header-title {
      font-size: 20px;
      font-weight: 700;
      color: var(--text-primary);
      margin: 0;
      line-height: 1.2;
    }

    .header-subtitle {
      font-size: 13px;
      color: var(--text-secondary);
      margin: 0;
    }

    .project-detail {
      border-bottom: none;
    }

    .project-title {
      font-size: 23px;
      font-weight: 700;
      color: var(--text-primary);
      margin: 0 0 8px 0;
      line-height: 1.3;
    }

    .project-description {
      font-size: 17px;
      line-height: 1.5;
      color: var(--text-primary);
      margin: 0;
    }

    /* Additional utilities explicitly for this page if needed */
    .my-4 {
      margin-top: 16px;
      margin-bottom: 16px;
    }
    .rounded-xl {
      border-radius: 12px;
    }
